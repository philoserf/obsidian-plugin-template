{
  "name": "obsidian-plugin-template",
  "version": "1.0.0",
  "description": "A minimal template for Obsidian plugins using Bun",
  "main": "dist/main.js",
  "type": "module",
  "scripts": {
    "dev": "bun run build.ts --watch",
    "build": "bun run check && bun run build.ts",
    "check": "bun run typecheck && bun run lint && bun run format:check",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . && markdownlint '**/*.md'",
    "lint:fix": "eslint . --fix && markdownlint --fix '**/*.md'",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "version": "bun run version-bump.ts"
  },
  "keywords": [
    "obsidian",
    "obsidian-plugin",
    "template"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "9.17.0",
    "@types/bun": "^1.3.4",
    "@types/node": "20.19.1",
    "@typescript-eslint/eslint-plugin": "8.18.1",
    "@typescript-eslint/parser": "8.18.1",
    "eslint": "9.17.0",
    "markdownlint-cli": "0.46.0",
    "obsidian": "1.10.3",
    "prettier": "3.4.2",
    "typescript": "5.7.2"
  }
}
