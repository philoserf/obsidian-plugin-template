{
  "name": "obsidian-plugin-template",
  "version": "1.0.0",
  "description": "A minimal template for Obsidian plugins using Bun",
  "main": "dist/main.js",
  "type": "module",
  "scripts": {
    "dev": "bun run build.ts --watch",
    "build": "bun run check && bun run build.ts",
    "check": "bun run typecheck && bun run lint && bun run format:check",
    "typecheck": "tsc --noEmit",
    "lint": "biome lint . && markdownlint '**/*.md'",
    "lint:fix": "biome lint --write . && markdownlint --fix '**/*.md'",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "version": "bun run version-bump.ts"
  },
  "keywords": [
    "obsidian",
    "obsidian-plugin",
    "template"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@types/bun": "^1.3.4",
    "@types/node": "20.19.1",
    "markdownlint-cli": "0.46.0",
    "obsidian": "1.10.3",
    "typescript": "5.7.2"
  }
}
